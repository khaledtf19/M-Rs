// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum MediaType {
  movie
  tv
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  movieId   String?
  movie     Media?   @relation(name: "Reviews", fields: [movieId], references: [id])

  @@index([userId])
  @@index([movieId])
}

model Media {
  id            String    @id @default(cuid())
  MDBID         Int
  type          MediaType
  title         String?
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  imdb_id       String
  backdrop_path String
  overview      String
  poster_path   String
  release_date  String
  genres        Genre[]   @relation("Genres")
  reviews       Review[]  @relation("Reviews")

  @@index([type])
  @@index([name])
  @@index([MDBID])
}

model Genre {
  id    String    @id @default(cuid())
  MDBID Int
  name  String
  type  MediaType
  media Media[]   @relation("Genres")

  @@index([type])
  @@index([MDBID])
}
